<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sam.teamd.samandroidclient.ui.ViewMailActivity">

    <TextView
        android:id="@+id/txt_view_mail_message_subject"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:text="@string/view_mail_message_subject_txt"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_view_mail_message_sender"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_view_mail_message_sender"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="@string/view_mail_message_sender_txt"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:ignore="RtlHardcoded"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginRight="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/txt_view_mail_message_recipient"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/view_mail_message_recipient_txt"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_view_mail_message_cc"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_mail_message_sender" />

    <TextView
        android:id="@+id/txt_view_mail_message_cc"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="@string/view_mail_message_cc_txt"
        android:textAlignment="center"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded"
        app:layout_constraintBottom_toTopOf="@+id/txt_view_mail_message_sent_date"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_mail_message_recipient"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/txt_view_mail_message_body"
        android:layout_width="322dp"
        android:layout_height="197dp"
        android:layout_marginBottom="16dp"
        android:text="@string/view_mail_message_body_txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        tools:layout_editor_absoluteY="298dp"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/txt_view_mail_message_sent_date"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="@string/view_mail_message_sent_date_txt"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_view_mail_message_body"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_mail_message_cc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/view_mail_message_subject_txt"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_view_mail_message_subject"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_view_mail_message_subject"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/view_mail_message_sender_txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_view_mail_message_sender"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.568" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/view_mail_message_sent_date_txt"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_view_mail_message_sent_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_view_mail_message_sent_date" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/view_mail_message_recipient_txt"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_view_mail_message_recipient"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_view_mail_message_recipient" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/view_mail_message_cc_txt"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_view_mail_message_cc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_view_mail_message_cc" />

</android.support.constraint.ConstraintLayout>
