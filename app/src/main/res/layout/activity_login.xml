<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sam.teamd.samandroidclient.ui.LoginActivity">

    <EditText
        android:id="@+id/input_login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="@string/login_username_input"
        android:inputType="textPersonName"
        android:text="@string/login_username_txt"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="@+id/txt_login_title"
        app:layout_constraintRight_toRightOf="@+id/txt_login_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_login_title" />

    <Button
        android:id="@+id/btn_login_enter"
        style="@android:style/Widget.Material.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_enter_btn"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_login_password" />

    <TextView
        android:id="@+id/txt_login_title"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginTop="102dp"
        android:text="@string/login_login_txt"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/login_password_input"
        android:inputType="textPassword"
        android:text="@string/login_password_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/input_login_username"
        app:layout_constraintRight_toRightOf="@+id/input_login_username"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/input_login_username" />

</android.support.constraint.ConstraintLayout>
