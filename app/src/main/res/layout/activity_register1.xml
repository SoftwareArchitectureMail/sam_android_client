<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sam.teamd.samandroidclient.ui.Register1Activity">

    <TextView
        android:id="@+id/txt_register_register"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/register_register_txt"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_register_name"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:ems="10"
        android:hint="@string/register_name_input"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_register_register"
        app:layout_constraintBottom_toTopOf="@+id/input_register_lastname"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <EditText
        android:id="@+id/input_register_lastname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="@string/register_lastname_input"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintBottom_toTopOf="@+id/input_register_phone"
        app:layout_constraintTop_toBottomOf="@+id/input_register_name"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <TextView
        android:id="@+id/txt_register_birthdate"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginBottom="220dp"
        android:text="@string/register_birthdate_txt"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.505" />

    <EditText
        android:id="@+id/input_register_month"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginBottom="162dp"
        android:ems="10"
        android:hint="@string/register_month_input"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/input_register_year"
        app:layout_constraintRight_toLeftOf="@+id/input_register_day" />

    <EditText
        android:id="@+id/input_register_day"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginBottom="162dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="@string/register_day_input"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/input_register_month"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_register_next"
        style="@android:style/Widget.Material.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="next"
        android:text="@string/register_next_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/input_register_year"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="163dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:hint="@string/register_year_input"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/input_register_month" />

    <TextView
        android:id="@+id/txt_register_gender"
        android:layout_width="118dp"
        android:layout_height="33dp"
        android:layout_marginBottom="101dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/register_gender_txt"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/spinner_register_gender"
        tools:layout_editor_absoluteY="378dp" />

    <Spinner
        android:id="@+id/spinner_register_gender"
        android:layout_width="220dp"
        android:layout_height="33dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_register_gender"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="101dp" />

    <EditText
        android:id="@+id/input_register_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:hint="@string/register_phone_input"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/txt_register_birthdate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_register_lastname" />

</android.support.constraint.ConstraintLayout>
