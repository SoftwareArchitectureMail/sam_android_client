<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/icon_send"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:textColor="#FE2E2E"
            android:textSize="35px"
            android:padding="10px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_sender"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:width="210sp"
            android:maxWidth="210sp"
            android:text="@string/view_mail_message_sender_txt"
            android:textColor="@android:color/black"
            android:textSize="50px"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_mail_message_subject_txt"
            android:textColor="@android:color/black"
            android:textSize="40px"
            android:textStyle="italic"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:text="@string/view_mail_message_body_txt"
            android:textColor="@android:color/black"
            android:textSize="35px"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.15">

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:text="@string/view_mail_message_sent_date_txt"
            android:textSize="35px"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp">

            <TextView
                android:id="@+id/icon_urgent"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:textColor="#FE2E2E"
                android:textSize="20px" />

            <TextView
                android:id="@+id/icon_attachment"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:padding="5px"
                android:textSize="35px" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>